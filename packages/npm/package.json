{
    "name": "@techor/npm",
    "type": "module",
    "scripts": {
        "build:main": "rollup --config rollup.config.mjs",
        "build:type": "tsc --emitDeclarationOnly --preserveWatchOutput",
        "build": "pnpm run \"/^build:.*/\"",
        "dev": "pnpm run \"/^build:.*/\" --watch",
        "test": "jest",
        "type-check": "tsc --noEmit",
        "lint": "eslint src"
    },
    "license": "MIT",
    "description": "Get, query, and read such as package workspaces via NPM/PNPM.",
    "author": {
        "name": "Aron",
        "email": "i@aron.tw",
        "url": "http://aron.tw"
    },
    "homepage": "https://aron.tw",
    "bugs": {
        "url": "https://github.com/techor-dev/techor/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/techor-dev/techor.git",
        "directory": "packages/npm"
    },
    "keywords": [
        "package",
        "json",
        "packagejson",
        "utils",
        "workspaces",
        "npm",
        "pnpm",
        "yarn"
    ],
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "main": "./dist/index.cjs",
    "esnext": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@techor/glob": "workspace:^",
        "@techor/extend": "workspace:^",
        "@techor/fs": "workspace:^",
        "@techor/log": "workspace:^",
        "js-yaml": "^4.1.0"
    }
}